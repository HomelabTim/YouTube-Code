(change nameservers)
echo "nameserver 8.8.8.8" | sudo tee /etc/resolv.conf > /dev/null

sudo nano /etc/ssh/sshd_config
#PermitRootLogin prohibit-password  (change this to this v)
PermitRootLogin yes
sudo passwd #put your root password
reboot!!!!

