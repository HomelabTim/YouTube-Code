sudo apt install samba -y 
sudo adduser admin
sudo smbpasswd -a admin
cd /home 
cd admin/
mkdir shared_folder
chown admin shared_folder/ 
chgrp admin shared_folder/ 
nano /etc/samba/smb.conf


*add to end* 
[shared_folder]
    path = /home/admin/shared_folder
    readonly = no 
    inherit permission = yes 


service smbd restart 

